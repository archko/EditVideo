<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/result"
        android:name="com.thuypham.ptithcm.editvideo.ui.fragment.result.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_result" />

    <fragment
        android:id="@+id/home"
        android:name="com.thuypham.ptithcm.editvideo.ui.fragment.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/homeToMedia"
            app:destination="@id/media" />
        <action
            android:id="@+id/homeToResult"
            app:destination="@id/result"
            app:popUpTo="@id/home" />

        <action
            android:id="@+id/home_to_extractImages"
            app:destination="@id/extractImages"
            app:popUpTo="@id/home"/>

        <action
            android:id="@+id/home_to_Merge"
            app:destination="@id/mergeVideo"
            app:popUpTo="@id/home" />

        <action
            android:id="@+id/home_to_Cut"
            app:destination="@id/cutVideo"
            app:popUpTo="@id/home" />

        <action
            android:id="@+id/homeToPlayFullscreen"
            app:destination="@id/cutVideo"
            app:popUpTo="@id/home" />

        <action
            android:id="@+id/home_play_history"
            app:destination="@id/playHistory"
            app:popUpTo="@id/home" />
    </fragment>

    <fragment
        android:id="@+id/media"
        android:name="com.thuypham.ptithcm.editvideo.ui.fragment.media.MediaFragment"
        android:label="MediaFragment"
        tools:layout="@layout/fragment_media"/>

    <fragment
        android:id="@+id/mergeVideo"
        android:name="com.thuypham.ptithcm.editvideo.ui.fragment.merge.MergeFragment"
        android:label="MergeFragment"
        tools:layout="@layout/fragment_merge" />

    <fragment
        android:id="@+id/cutVideo"
        android:name="com.thuypham.ptithcm.editvideo.ui.fragment.cut.CutFragment"
        android:label="MergeFragment"
        tools:layout="@layout/fragment_cut"/>

    <fragment
        android:id="@+id/extractImages"
        android:name="com.thuypham.ptithcm.editvideo.ui.fragment.extractimage.ExtractImageResultFragment"
        android:label="ExtractImageFragment"
        tools:layout="@layout/fragment_extract_image_result"></fragment>

    <fragment
        android:id="@+id/playHistory"
        android:name="com.thuypham.ptithcm.editvideo.ui.fragment.history.PlayHistoryFragment"
        android:label="PlayHistoryFragment"
        tools:layout="@layout/fragment_extract_image_result"></fragment>

</navigation>